{
  "name": "Lightweight YIFY movie downloader for IMDb",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Adds links of available YIFY movies (720p, 1080p, etc.) to IMDb.",
  "content_scripts": [ {
    "js": ["jquery.min.js", "jquery.inview.min.js", "jquery.hoverIntent.min.js", "background.js"],
    "css": ["styles.css"],
    "matches": ["*://www.imdb.com/list/*", "*://www.imdb.com/title/*", "*://www.imdb.com/user/*/watchlist*"]
  }]
}
